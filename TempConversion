#include <iostream>
#include <iomanip>
#include <limits>
#include <cctype>

using namespace std;

bool readDouble(const char* prompt, double& out) 
{
    cout << prompt;
    if (cin >> out) return true;
    cin.clear();
    cin.ignore(numeric_limits<streamsize>::max(), '\n');
    cerr << "Invalid number. Please try again.\n";
    return false;
}
